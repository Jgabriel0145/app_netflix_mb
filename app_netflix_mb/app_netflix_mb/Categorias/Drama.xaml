<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="app_netflix_mb.Categorias.Drama"
             BackgroundColor="#2f2f30">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">

            <Image x:Name="logo" Style="{StaticResource LogoNaListaDePosters}" Margin="10"/>

            <ScrollView>

                <Grid Padding="5" RowDefinitions="300,300" ColumnDefinitions="*,*">

                    
                    <ImageButton x:Name="btnSegredosDumbledore" Grid.Row="0" Grid.Column="0"
                                 Style="{StaticResource ButtonPosters}"
                                 Clicked="btnSegredosDumbledore_Clicked"/>

                    <ImageButton x:Name="btnBreakingBad" Grid.Row="0" Grid.Column="1"
                                 Style="{StaticResource ButtonPosters}"
                                 Clicked="btnBreakingBad_Clicked"/>

                    <ImageButton x:Name="btnElite" Grid.Row="1" Grid.Column="0"
                                 Style="{StaticResource ButtonPosters}"
                                 Clicked="btnElite_Clicked"/>

                    <ImageButton x:Name="btnHalo" Grid.Row="1" Grid.Column="1"
                                 Style="{StaticResource ButtonPosters}"
                                 Clicked="btnHalo_Clicked"/>

                </Grid>

            </ScrollView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>